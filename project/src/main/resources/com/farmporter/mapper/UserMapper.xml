<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.farmporter.mapper.UserMapper">

	<!-- 회원가입 -->  
  	<insert id="userJoin">
  		insert into farm_user values(#{userId}, #{userPw}, #{userName}, #{userMail}, #{userPhoneNo}, #{userAddr1}, #{userAddr2}, #{userAddr3}, 0, #{birthday}, sysdate)
  	</insert>
  	
  	<!-- 아이디 중복검사 -->
  	<select id="idCheck" resultType="int">  	
  		select count(*) from farm_user where userId = #{userId}  	
  	</select>
  	
  	<!-- 로그인 -->
  	<select id="userLogin" resultType="com.farmporter.model.UserVO">  	
  		<!-- select userId, userPw, name, adminck from farm_user where userId = #{userId} and userPw = #{userPw} -->
  		select userId, userPw, name, adminck from farm_user where userId = #{userId} and userPw = #{userPw}
  	</select>
  	
   	<!-- 가입자 정보 -->
  	<select id="getUserInfo" resultMap="UserInfo" resultType="com.farmporter.model.UserVO">  	
  		SELECT userId, name, userMail, userPhoneNo, birthday, userAddr1, userAddr2, userAddr3, regDate 
  		FROM farm_user 
  		WHERE userId = #{userId}  	
  	</select>
  	
  	<resultMap type="com.farmporter.model.UserVO" id="UserInfo">
  		<result property="userId" column="userId"/>
  		<result property="userName" column="name"/>
  		<result property="userMail" column="userMail"/>
  		<result property="userPhoneNo" column="userPhoneNo"/>
  		<result property="userAddr1" column="userAddr1"/>
  		<result property="userAddr2" column="userAddr2"/>
  		<result property="userAddr3" column="userAddr3"/>
  		<result property="birthday" column="birthday"/>
  		<result property="regDate" column="regDate"/>
  	</resultMap>
  	
  	<!-- 가입자 정보 수정 -->
  	<update id="editUserInfo" parameterType="com.farmporter.model.UserVO">
  		update farm_user set 
  		userPw=#{user.userPw}, 
  		userPhoneNo=#{user.userPhoneNo}, 
  		userAddr1=#{user.userAddr1}, 
  		userAddr2=#{user.userAddr2},  
  		userAddr3=#{user.userAddr3} where userId=#{user.userId}
  	</update>
  	
  	<!-- 회원 탈퇴 -->
  	<delete id="deleteUser">
  		DELETE FROM farm_user
  		WHERE userId = #{userId}
  	</delete>
  	
  </mapper>